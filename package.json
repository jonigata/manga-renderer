{
  "name": "manga-renderer",
  "version": "1.0.14",
  "description": "A renderer for package files output from FramePlanner",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:main": "vite build",
    "build": "npm run clean && npm run build:main",
    "prepublishOnly": "npm run build",
    "example": "npm run build:examples && node dist/examples/sample.js",
    "test": "vitest",
    "watch": "vite build --watch"
  },
  "keywords": [
    "manga",
    "renderer",
    "graphics",
    "illustration"
  ],
  "author": "Naoyuki Hirayama",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonigata/manga-renderer.git"
  },
  "bugs": {
    "url": "https://github.com/joniata/manga-renderer/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "@types/color-rgba": "^2.1.3",
    "cbor-x": "^1.6.0",
    "color-parse": "^2.0.2",
    "color-rgba": "^3.0.0",
    "fastsdf": "^0.0.11",
    "paper": "^0.12.18",
    "paperjs-offset": "^1.0.8",
    "perfect-freehand": "^1.2.2",
    "roughjs": "^4.6.6",
    "seedrandom": "^3.0.5",
    "sha1-uint8array": "^0.10.7",
    "typai": "^0.0.15",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/seedrandom": "^3.0.8",
    "rimraf": "^5.0.0",
    "rollup-plugin-visualizer": "^5.13.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "zod": "^3.24.1"
  }
}
